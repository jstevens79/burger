<ul>
  {{#each burgers}}
    <li data-id="{{id}}">
      {{burger_name}}
      <button id={{id}}>Eat</button>
    </li>
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Enter a burger</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
